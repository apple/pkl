    -1 ** math.maxInt

    0 ** math.minInt
    1 ** math.minInt
    -1 ** math.minInt

    module.catch(() -> 2 ** math.maxInt8)
    module.catch(() -> 2 ** math.maxInt16)
    module.catch(() -> 2 ** math.maxInt32)
    module.catch(() -> 2 ** math.maxInt)
    module.catch(() -> -2 ** math.maxInt8)
    module.catch(() -> -2 ** math.maxInt16)
    module.catch(() -> -2 ** math.maxInt32)
    module.catch(() -> -2 ** math.maxInt)

    math.maxInt ** 0
    math.maxInt ** 1
    module.catch(() -> math.maxInt ** 2)

    4 ** 3 ** 2 == 4 ** (3 ** 2)
    1 + 2 ** 3 == 1 + (2 ** 3)
    2 * 2 ** 3 == 2 * (2 ** 3)
    2 ** 3 + 1 == (2 ** 3) + 1
    2 ** 3 * 2 == (2 ** 3) * 2
  }
