amends "../snippetTest.pkl"

import "pkl:math"

facts {
  ["equality"] {
    2 == 2
    2 == 2.0
    !(2 == 3)
  }

  ["inequality"] {
    2 != 3
    !(2 != 2)
    !(2 != 2.0)
  }
  ["underscore - digits"] {
    1_000 == 1000
    1_000__000 == 1000000
    1___ == 1
    1___1 == 11
    1__000_0 == 10000
    -10_000 == -10000
  }
  ["underscore - hex"] {
    0x42_ab_AB_de_12 == 0x42ababde12
    0x41__ == 0x42
    0x59__9 == 0x599
    -0x59__9 == -0x599
  }
  ["underscore - binary"] {
    0b1011_0110 == 0b10110110
    0b01__10 == 0b0110
    0b1____0 == 0b10
    -0b1_____ == -0b1
  }
  ["underscore - octal"] {
    0o23 == 0o23
    0o4_162_376_1 == 0o41623761
    0o41__ == 0o41
    0o56__6 == 0o566
    -0o57__7 == -0o577
  }
}

