extends "GradleJob.pkl"

import "package://pkg.pkl-lang.org/pkl-pantry/com.circleci.v2@1.1.2#/Config.pkl"

name: String = command

command: String

os = "linux"

javaVersion = "17.0"

steps {
  new Config.RunStep {
    name = module.name
    command = """
      ./gradlew \(module.gradleArgs) \(module.command)
      """
  }
}
